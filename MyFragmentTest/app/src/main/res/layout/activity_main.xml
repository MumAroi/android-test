<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paramas_wae.myfragmenttest.MainActivity"
    android:id="@+id/main_activity">

    <TextView
        android:id="@+id/activity_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/btn_add_fragment"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="ADD FRAGMENT"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/btn_remove_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE FRAGMENT"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_fragment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <FrameLayout
        android:id="@+id/layout_fragment_container"
        android:layout_width="326dp"
        android:layout_height="184dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_remove_fragment"
        app:layout_constraintLeft_toLeftOf="parent">

    </FrameLayout>


</android.support.constraint.ConstraintLayout>
